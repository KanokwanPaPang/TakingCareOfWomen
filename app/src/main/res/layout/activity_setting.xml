<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud">

    <include android:id="@+id/toolbar_main" layout="@layout/toolbar_main" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView2"
        android:text="การแจ้งเตือน"
        android:textSize="26dp"
        android:layout_marginTop="83dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView3"
        android:layout_below="@+id/toolbar_main"
        android:text="ประจำเดือน"
        android:textSize="26sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ระยะห่างรอบเดือน"
        android:id="@+id/textView4"
        android:padding="7dp"
        android:textSize="22dp"
        android:textColor="#8b1a20"
        android:layout_below="@+id/textView3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ระยะเวลาที่มีประจำเดือน"
        android:id="@+id/textView5"
        android:textSize="22dp"
        android:textColor="#8b1a20"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <EditText
        android:id="@+id/numberPicker"
        android:layout_height="wrap_content"
        android:layout_width="120dp"
        android:gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView3"/>

    <EditText
        android:id="@+id/numberPicker2"
        android:layout_height="wrap_content"
        android:layout_width="120dp"
        android:gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/numberPicker"/>

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ประจำเดือนรอบถัดไป"
        android:id="@+id/switch1"
        android:textSize="22sp"
        android:textColor="#8b1a20"
        android:enabled="true"
        android:checked="true"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="วันไข่ตก"
        android:id="@+id/switch2"
        android:textSize="22sp"
        android:textColor="#8b1a20"
        android:enabled="true"
        android:checked="true"
        android:visibility="visible"
        android:layout_below="@+id/switch1"
        android:layout_alignLeft="@+id/switch1"
        android:layout_alignStart="@+id/switch1" />

</RelativeLayout>